<UserControl
    x:Class="AvalonDockTest.MainView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:AvalonDockTest"
    xmlns:local1="clr-namespace:ImageDoing;assembly=ImageDoing"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <DockingManager
            x:Name="dockManager"
            AllowMixedOrientation="True"
            AutoWindowSizeWhenOpened="True"
            IsVirtualizingAnchorable="True"
            IsVirtualizingDocument="True"
            LayoutUpdated="DockManager_LayoutUpdated">

            <DockingManager.AnchorableHeaderTemplate>
                <DataTemplate>
                    <TextBlock
                        FontSize="10"
                        Text="{Binding Title}"
                        TextTrimming="CharacterEllipsis" />
                </DataTemplate>
            </DockingManager.AnchorableHeaderTemplate>

            <DockingManager.AnchorableTitleTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="100" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Margin="5,0,0,0"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Foreground="White"
                            Text="{Binding ContentId}"
                            TextAlignment="Center" />

                        <TextBlock
                            Grid.Column="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            FontSize="10"
                            Foreground="White"
                            Text="{Binding ToolTip}"
                            TextAlignment="Center" />
                    </Grid>
                </DataTemplate>
            </DockingManager.AnchorableTitleTemplate>

            <LayoutRoot>
                <LayoutRoot.RootPanel>
                    <LayoutPanel>

                        <LayoutAnchorablePane>
                            <LayoutAnchorable
                                x:Name="WinFormsWindow"
                                Title="WinForms Window"
                                CanClose="False"
                                CanHide="False"
                                ContentId="WinFormsWindow"
                                FloatingHeight="200"
                                FloatingWidth="50">
                                <Grid Background="#aeafaa" />
                            </LayoutAnchorable>
                        </LayoutAnchorablePane>

                        <LayoutAnchorablePane>
                            <LayoutAnchorable
                                Title="Chanel1"
                                CanAutoHide="False"
                                CanClose="False"
                                CanMove="False"
                                ContentId="Chanel1">

                                <Grid>
                                    <ScrollViewer VerticalScrollBarVisibility="Disabled">
                                        <local1:ImageViewerView x:Name="image1" />
                                    </ScrollViewer>
                                </Grid>
                            </LayoutAnchorable>
                        </LayoutAnchorablePane>

                        <LayoutAnchorablePane DockHeight="200" DockWidth="200">
                            <LayoutAnchorable
                                Title="A-Scan"
                                CanClose="False"
                                CanHide="False"
                                ContentId="A-Scan"
                                FloatingHeight="200"
                                FloatingWidth="200">
                                <local:AScanWave MinWidth="180" MinHeight="180" />
                            </LayoutAnchorable>

                            <LayoutAnchorable
                                Title="Scanner"
                                CanClose="False"
                                CanHide="False"
                                ContentId="Scanner"
                                FloatingHeight="200"
                                FloatingWidth="200" />

                            <LayoutAnchorable
                                Title="Data"
                                CanClose="False"
                                CanHide="False"
                                ContentId="Data"
                                FloatingHeight="200"
                                FloatingWidth="200">
                                <Button
                                    Width="180"
                                    Height="180"
                                    Click="ButtonLoadImage_Click"
                                    Content="laod" />
                            </LayoutAnchorable>

                            <LayoutAnchorable
                                Title="History"
                                CanClose="False"
                                CanHide="False"
                                ContentId="History"
                                FloatingHeight="200"
                                FloatingWidth="200">

                                <Button
                                    Width="180"
                                    Height="180"
                                    Click="Button_Click"
                                    Content="save" />
                            </LayoutAnchorable>
                        </LayoutAnchorablePane>
                    </LayoutPanel>
                </LayoutRoot.RootPanel>
            </LayoutRoot>
        </DockingManager>
    </Grid>
</UserControl>