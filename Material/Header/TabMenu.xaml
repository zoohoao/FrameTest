<Page
    x:Class="Material.Header.TabMenu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Material.Header"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="TabMenu"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <materialDesign:Card>
            <TabControl materialDesign:ColorZoneAssist.Mode="PrimaryMid" Style="{StaticResource MaterialDesignFilledTabControl}">
                <TabItem Header="TAB 1">
                    <TextBlock Margin="8" Text="PrimaryMid Tab 1" />
                </TabItem>
                <TabItem Header="TAB 2">
                    <TextBlock Margin="8" Text="PrimaryMid Tab 2" />
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</Page>